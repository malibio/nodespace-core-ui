{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src/lib.ts",
    "src/NodeSpaceEditor.tsx",
    "src/nodes/**/*",
    "src/utils/**/*",
    "src/components/**/*",
    "src/icons/**/*"
  ],
  "exclude": [
    "src/demo/**/*",
    "src/App.tsx",
    "src/index.tsx",
    "src/**/*.test.*",
    "src/setupTests.ts"
  ]
}
